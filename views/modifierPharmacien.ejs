<%- include('script_header') %> 
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="bg-light rounded" style="border: 2px solid #343a40; padding: 20px;">
          <h3 class="text-success text-center mb-4">Modifier un pharmacien</h3>
          <form action="/pharmaciens/modifier/<%= pharmacien.Pharmacien_Id %>" method="POST">
            <div class="mb-3">
              <label class="form-label" for="nom">Nom :</label>
              <input class="form-control <%= typeof errors !== 'undefined' && errors.includes('Le nom saisi est invalide.') ? 'is-invalid' : '' %>" type="text" name="nom" id="nom" required value="<%= pharmacien.Pharmacien_Nom %>">
              <% if (typeof errors !== 'undefined' && errors.includes('Le nom saisi est invalide.')) { %>
                <div class="invalid-feedback" style="display: block;">
                  Le nom saisi est invalide.
                </div>
              <% } %>
            </div>
            <div class="mb-3">
              <label class="form-label" for="prenom">Prénom :</label>
              <input class="form-control <%= typeof errors !== 'undefined' && errors.includes('Le prénom saisi est invalide.') ? 'is-invalid' : '' %>" type="text" name="prenom" id="prenom" required value="<%= pharmacien.Pharmacien_Prenom %>">
              <% if (typeof errors !== 'undefined' && errors.includes('Le prénom saisi est invalide.')) { %>
                <div class="invalid-feedback" style="display: block;">
                  Le prénom saisi est invalide.
                </div>
              <% } %>
            </div>
            <div class="mb-3">
              <label class="form-label" for="nomUtilisateur">Nom d'utilisateur :</label>
              <input class="form-control" type="text" name="nomUtilisateur" id="nomUtilisateur" required value="<%= pharmacien.Pharmacien_NomUtilisateur %>">
            </div>
            <div class="mb-3">
              <label class="form-label" for="motDePasse">Mot de passe :</label>
              <input class="form-control" type="text" name="motDePasse" id="motDePasse" required value="<%= pharmacien.Pharmacien_MotDePasse %>">
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
              <a href="/pharmaciens" class="btn btn-secondary">Annuler</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
